#!/bin/sh

for dir in /sys/class/thermal/thermal_zone*/; do
    if [ "$(cat "$dir/type")" = "x86_pkg_temp" ]; then
        if [ "$(cat "$dir/temp")" -ge 75000 ]; then
            notify-send -u critical -i "fire" "Critical temperature" "Your CPU's temperature is $(sed 's/\(.\)..$/.\1Â°C/' "$dir/temp")\nThat is an abnormal level"
        fi
        break
    fi
done
